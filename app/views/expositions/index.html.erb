<p id="notice"><%= notice %></p>

<h1>Listing Expositions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Address</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expositions.each do |exposition| %>
      <tr>
        <td><%= exposition.title %></td>
        <td><%= exposition.text %></td>
        <td><%= exposition.address %></td>
        <td><%= exposition.start_time %></td>
        <td><%= exposition.end_time %></td>
        <td><%= exposition.start_date %></td>
        <td><%= exposition.end_date %></td>
        <td><%= link_to 'Show', exposition %></td>
        <td><%= link_to 'Edit', edit_exposition_path(exposition) %></td>
        <td><%= link_to 'Destroy', exposition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

