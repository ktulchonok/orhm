<%= simple_form_for(@client) do |f| %>
    <%= f.error_notification %>

    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, required: true %>
      <%= f.input :email %>
      <!--TODO: Лебел убрать, Убрать фамилию оставить только имя-->
      <%= f.input :role, label: t(:role), as: :select, collection: Client::ROLES, selected: :guest %>
      <%= f.input :age, as: :select, prompt: t('simple_form.prompts.defaults.age'), collection: Client::AGES %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t('subscribe.longbutton') %>
    </div>
<% end %>
